<idea-plugin>
    <id>com.picocode.rag-assistant</id>
    <name>PicoCode RAG Assistant</name>
    <version>0.0.1</version>
    <vendor>PicoCode</vendor>

    <description><![CDATA[
        Local RAG-powered code assistant with per-project persistent storage.
        Uses your OpenAI-compatible provider for embeddings and code generation.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <statusBarWidgetFactory id="com.picocode.PicoCodeStatusBarWidgetFactory"
                                implementation="com.picocode.PicoCodeStatusBarWidgetFactory" 
                                order="after memoryIndicator"/>
        <projectConfigurable parentId="tools" 
                            instance="com.picocode.PicoCodeConfigurable"
                            id="com.picocode.PicoCodeConfigurable"
                            displayName="PicoCode"/>
        <projectService serviceImplementation="com.picocode.PicoCodeSettings"/>
    </extensions>
</idea-plugin>
